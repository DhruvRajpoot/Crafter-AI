datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserConversation {
  id        String   @id @default(cuid())
  userId    String   @unique
  conversations Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserCode {
  id        String   @id @default(cuid())
  userId    String   @unique
  codes Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}